---
import Vector from "./Vector.astro";

export interface Props {
  id: string;
}

const id = Astro.props.id;
---

<h3 class="headline-medium">Gerade</h3>
<div class="container">
  <div class="vectorsection">
    <h3 class="headline-small">Richtungsvektor</h3>
    <Vector id={`${id}-direction`} />
  </div>

  <div class="vectorsection">
    <h3 class="headline-small">Basisvektor</h3>
    <Vector id={`${id}-base`} />
  </div>
</div>
<style>
  .container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
    gap: var(--margin);
  }

  .vectorsection {
    display: flex;
    justify-content: center;
    flex-direction: column;
  }
</style>
