---
import Vector from "./Vector.astro";
---

<h3 class="headline-medium">Punkt</h3>
<div class="container">
  <div class="vectorsection">
    <h3 class="headline-small">Vektor</h3>
    <Vector id="point" />
  </div>
</div>
<style>
  .container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
    gap: var(--margin);
  }

  .vectorsection {
    display: flex;
    justify-content: center;
    flex-direction: column;
  }
</style>
