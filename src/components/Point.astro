---
import { MdFilledTextField } from "@material/web/textfield/filled-text-field";
---

<h3 class="headline-medium">Punkt</h3>
<div>
  {
    (
      // @ts-expect-error
      <MdFilledTextField
        label="X-Koordinate"
        placeholder="42,98"
        type="number"
        client:only="lit"
      />
    )
  }
  {
    (
      // @ts-expect-error
      <MdFilledTextField
        label="Y-Koordinate"
        placeholder="42,98"
        type="number"
        client:only="lit"
      />
    )
  }
  {
    (
      // @ts-expect-error
      <MdFilledTextField
        label="Z-Koordinate"
        placeholder="42,98"
        type="number"
        client:only="lit"
      />
    )
  }
</div>
<style>
  div {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
    gap: var(--margin);
  }
</style>
